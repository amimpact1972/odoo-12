<odoo>
    <data>
<template id="report_airway">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page" style="font-size: 20px; margin-top: 20px;">
                      <div class="oe_structure"/>
                      <div class="row">
                        <div class="col-6">
                          <img style="max-width:100%; position:absolute; top:20px;" t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)"/>
                        </div>
                        <div class="col-6">
                          <t t-set="qr_url" t-value="'/picking/validate/%s'%o.name.replace('/','-')"/>
                          <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', qr_url, 400, 400)" style="width:100px;height:100px ; border: 1px black dotted;" class="pull-right mr16 mb16"/>
                        </div>
                        </div>
                      <div class="row">
                        <div class="col-6">
                          <strong>Scheduled Date:</strong>
                          <div t-field="o.scheduled_date"></div>
                          <strong>Shipment From:</strong>
                         <div t-field="o.picking_type_id.warehouse_id.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        </div>
                        <div class="col-6">
             
                          <span t-field="o.name" class="pull-right"/>
                          <br/>
                          <span t-field="o.origin" class="pull-right"/>

                        </div>
                      </div>
                      <hr/>
                      <div class="row">
                        <div class="col-6">
                          <strong>Shipment to:</strong>
                         <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;mobile&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                          <div t-foreach="o.sale_id.invoice_ids" t-as="invoice">
                            <div>
                              <hr/>
                          <strong>Cash on delivery:</strong>
                          <p>Order Amount: <span t-field="invoice.amount_total"/></p>
                          <p><strong>DUE: <span t-field="invoice.residual"/></strong></p>
                          <!--<img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', invoice.number, 400, 400)" style="width:100%;height:35px" class="pull-right mr16 mb16"/>
                          <span t-field="invoice.number"/>-->
                          </div>
                          <br/>
                          <div class="row text-center">
                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s' % ('Code128', invoice.number)"/>
                            <span t-field="invoice.number"/>
                          </div>
                         </div>
                        </div>
                      </div>
                   </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
